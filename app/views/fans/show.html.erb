<% if !@fan.team %>
<%= link_to "Create your team", new_fan_team_path(@fan) %>
<% end %>


<% if @fan.team %>
    <h1><%= @fan.team.team_name %></h1>
     <div id="container">
       <div class="box">
     <% @fan.team.queens.each do |queen| %>
    <%= image_tag(queen.image_url, height: '150', width: '150') %>
    <%= link_to queen.name, queen %>
    <h4><%=  queen.total_score%></h4>
  <% end %>
 <% end %>

<% team_total = [] %>
<% @fan.team.queens.each do |queen| %>
  <% team_total << queen.total_score %>
<% end %>
  <%= team_total.sum %>

 </div>
   </div>

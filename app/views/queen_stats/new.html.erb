                </div>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="field">
                        <div class="control">
                            <input class="input" type="text" placeholder="search . . .">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="is-centered" style="text-align: center; margin-bottom:35px;   margin-top:50px">

      <%= simple_form_for @queen_stat do |f| %>

        <!-- <= f.input :queen_id, collection: Queen.all, label_method: :name, value_method: :id %> -->
        <%= f.input :queen_id, as: :radio_buttons, collection: Queen.all, label_method: :name, value_method: :id %>
        <!-- <= f.input :queen_id, as: :boolean, boolean_style: :inline %> -->

        <%= f.input :episode, as: :radio_buttons, collection: 1..14, prompt: "Select the episode" %>

  <%= f.input :win_mini_challenge, as: :radio_buttons, collection: [['45', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.input :win_maxi_challenge, as: :radio_buttons, collection: [['100', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.input :safe_or_survives, as: :radio_buttons, collection: [['35', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.input :placed_in_top, as: :radio_buttons, collection: [['50', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.input :placed_in_bottom, as: :radio_buttons, collection: [['25', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.input :wins_lipsync, as: :radio_buttons, collection: [['83', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.input :loses_lipsync, as: :radio_buttons, collection: [['-9', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.input :eliminated, as: :radio_buttons, collection: [['-69', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.input :takes_the_crown, as: :radio_buttons, collection: [['500', 'yes'], ['0', 'no']], label_method: :second, value_method: :first %>
  <%= f.button :submit %>
<% end %>

</body>
</html>

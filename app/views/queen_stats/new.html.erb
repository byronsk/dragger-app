    <script defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js"></script>
</head>

<body>
    <nav class="navbar is-dark">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <img src="https://serving.photos.photobox.com/054554332509772119bf6726a32bccfc094f04f0cdbbbe3960e909dddb0fc29a9fb87b0f.jpg" alt="DRAGGER" width="112" height="28">
            </a>
            <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="/login">
                    Login
                </a>
                <a class="navbar-item" href="/signup">
                    Signup
                </a>
                <a class="navbar-item" href="/queens">
                    Queens
                </a>
                <a class="navbar-item" href="fan/teams">
                    My Team
                </a>
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link" href="/documentation/overview/start/">
                        More
                    </a>
                    <div class="navbar-dropdown is-boxed">
                        <a class="navbar-item" href="/documentation/overview/start/">
                            Mechandise
